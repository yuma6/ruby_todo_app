<div>

    <h1>index</h1>

    <div name="todo_create">
        <%= form_tag("/tasks/create") do %>
            <textarea name="content"></textarea>
            <br>
            <input type="date" name="start_time">
            <br>
            <input type="submit" value="追加">
        <% end %>
    </div>

    <div name="todo_view">
    <table class="table table-bordered">
        <% @tasks.each do |task|%>
            <div>
                <% if task.finish %>
                    <span class="del">
                        <%= link_to "#{task.content}期日#{task.start_time}まで","/tasks/#{task.id}/show" %>
                    </span>
                <% else %>
                    <%= link_to "#{task.content}期日#{task.start_time}まで","/tasks/#{task.id}/show" %>
                <% end %>
            </div>
        <% end %>
    </table>
    </div>

</div>
